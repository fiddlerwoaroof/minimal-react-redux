{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "node": true,
        "jest": true,
        "es6": true
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "settings": {
        "react": {
            "version": "16.0"
        }
    },
    "rules": {
        "no-unused-vars": ["error", {
            "argsIgnorePattern": "(^[_][_]*$)|(^.$)",
            "varsIgnorePattern": "(^[_][_]*$)|(^R$)"
        }]
    }
}
