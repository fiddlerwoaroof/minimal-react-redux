{
    "compilerOptions": {
        "target": "es2017",
        "baseUrl": "src",
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "jsx": "react",
        "lib": [ "dom", "es2017" ],
        "rootDirs": [
            "src"
        ],
        "module": "commonjs"
    },
    "exclude": [
        ".history/*",
        "frontend",
        "node_modules",
        "node_modules/**/*",
        "**/node_modules/**/*",
        "**/node_modules/*",
        "/.#*",
        "**/.#*"
    ]
}
